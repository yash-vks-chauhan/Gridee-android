<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name=".GrideeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gridee"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- Razorpay public key fallback (used if server doesn't supply keyId) -->
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="@string/razorpay_key_id" />
        
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Gridee.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.JwtTestActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.auth.RegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.MainComposeActivity"
            android:exported="true"
            android:theme="@style/Theme.Gridee.NoActionBar">
            <!-- Uncomment these lines to make this the main activity -->
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        
        <activity
            android:name=".ui.compose.EdgeToEdgeComposeActivity"
            android:exported="true"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.demo.EdgeToEdgeDemoActivity"
            android:exported="true"
            android:theme="@style/Theme.Gridee.NoActionBar">
            <!-- Test activity - can be made launcher for testing -->
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        
        <activity
            android:name=".ui.main.MainContainerActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />

        <activity
            android:name=".ui.wallet.WalletTopUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.bookings.BookingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
            
        <activity
            android:name=".ui.activities.TransactionHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.discovery.ParkingDiscoveryActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.details.ParkingDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.booking.BookingFlowActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.booking.ParkingLotSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.booking.ParkingSpotSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.booking.PaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.booking.BookingConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.profile.PrivacySettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />
        
        <activity
            android:name=".ui.wallet.WalletActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.Search"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity
            android:name=".ui.qr.QrScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.Gridee.NoActionBar" />

    </application>

</manifest>
