<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Neumorphism Style - Soft 3D Effect -->
    
    <!-- Dark shadow (bottom-right) -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#E0E5EC" />
        </shape>
    </item>

    <!-- Light shadow (top-left) -->
    <item android:top="2dp" android:left="2dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFFFFF"
                android:endColor="#E0E5EC" />
        </shape>
    </item>

    <!-- Main surface -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <solid android:color="#E0E5EC" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#12FFFFFF"
                android:centerColor="#06FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>
