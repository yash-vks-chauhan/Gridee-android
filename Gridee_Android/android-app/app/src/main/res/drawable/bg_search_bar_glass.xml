<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glassmorphism Premium Style -->
    
    <!-- Outer glow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#15000000"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Frosted glass background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FAFBFC"
                android:centerColor="#FFFFFF"
                android:endColor="#F8F9FA" />
        </shape>
    </item>

    <!-- Glass highlight (top-left) -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#18FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Vibrant border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke 
                android:width="0.8dp" 
                android:color="#20000000" />
        </shape>
    </item>

</layer-list>
