<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer dramatic shadow for active state depth -->
    <item android:top="10dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="21dp" />
            <solid android:color="#24000000" />
        </shape>
    </item>

    <!-- Mid shadow intensifying the pressed look -->
    <item android:top="6dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <solid android:color="#33000000" />
        </shape>
    </item>

    <!-- Contact shadow closest to the surface -->
    <item android:top="3dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="#33000000" />
        </shape>
    </item>

    <!-- Focused glass surface -->
    <item android:bottom="1dp">
        <layer-list>

            <!-- Frosted glass base with brighter tint -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="17dp" />
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#F0F0F8FF"
                        android:centerColor="#E0F0F8FF"
                        android:endColor="#CCF0F8FF" />
                </shape>
            </item>

            <!-- Energetic overlay to simulate interaction -->
            <item android:inset="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#99FFFFFF" />
                </shape>
            </item>

            <!-- Accent glow sourced from the top -->
            <item android:top="-2dp" android:bottom="26dp">
                <shape android:shape="rectangle">
                    <corners
                        android:topLeftRadius="17dp"
                        android:topRightRadius="17dp"
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp" />
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#80FFFFFF"
                        android:centerColor="#26FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>

            <!-- Primary colored border signalling focus -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="17dp" />
                    <stroke
                        android:width="2.5dp"
                        android:color="#CC1976D2" />
                </shape>
            </item>

            <!-- Inner focus ring with subtle glow -->
            <item android:inset="2.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="14.5dp" />
                    <stroke
                        android:width="1.2dp"
                        android:color="#801976D2" />
                </shape>
            </item>

            <!-- Interior luminosity to emphasise the glass -->
            <item android:inset="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="13dp" />
                    <gradient
                        android:type="radial"
                        android:gradientRadius="110dp"
                        android:centerX="50%"
                        android:centerY="35%"
                        android:startColor="#33FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>

</layer-list>
