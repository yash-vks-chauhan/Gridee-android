<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow for elevation -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#25000000" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Main white background -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="22dp" />
            <stroke
                android:width="0.5dp"
                android:color="#E2E8F0" />
        </shape>
    </item>
    
    <!-- Subtle top highlight -->
    <item android:bottom="2dp" android:top="1dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
