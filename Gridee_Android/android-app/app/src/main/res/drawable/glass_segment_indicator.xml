<?xml version="1.0" encoding="utf-8"?>
<!-- iOS-Style Bulky Glass Selection Indicator (Moving Pill) - Height 40dp, Radius 20dp -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle glow layer (underneath, slightly larger) -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#08FFFFFF" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Main indicator background with perfect pill shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Stronger translucent white fill (40-45% opacity) -->
            <solid android:color="@color/bulky_glass_indicator_fill" />
            <!-- Adjusted border to account for stroke centering -->
            <stroke
                android:width="1.5dp"
                android:color="@color/bulky_glass_indicator_border" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Enhanced specular highlight (glint effect) -->
    <item android:top="2dp" android:left="8dp" android:right="8dp" android:bottom="28dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/glass_specular"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item android:top="4dp" android:left="12dp" android:right="12dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bulky_glass_highlight"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Optional thin top specular stripe for extra gloss -->
    <item android:top="1dp" android:left="10dp" android:right="10dp" android:bottom="37dp">
        <shape android:shape="rectangle">
            <solid android:color="#0CFFFFFF" />
            <corners android:radius="19dp" />
        </shape>
    </item>
    
</layer-list>
