<?xml version="1.0" encoding="utf-8"?>
<!-- Minimal sliding pill indicator -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft drop shadow -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" />
            <corners android:radius="999dp" />
        </shape>
    </item>
    
    <!-- Pill surface -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bulky_glass_indicator_fill" />
            <stroke
                android:width="1dp"
                android:color="@color/bulky_glass_indicator_border" />
            <corners android:radius="999dp" />
        </shape>
    </item>
    
    <!-- Gentle highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/glass_specular"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="999dp" />
        </shape>
    </item>

</layer-list>
