<?xml version="1.0" encoding="utf-8"?>
<!-- iOS-Style Bulky Glass Selection Indicator (Moving Pill) - Height 40dp, Radius 20dp -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle outer glow (radial) for soft halo -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70%"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="@color/segment_glow"
                android:endColor="#00FFFFFF" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Soft glow layer (underneath, slightly larger) -->
    <item android:top="-1dp" android:left="-1dp" android:right="-1dp" android:bottom="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#08FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Main indicator background with perfect pill shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Translucent white fill (slightly lighter) -->
            <solid android:color="@color/bulky_glass_indicator_fill" />
            <!-- Hairline border -->
            <stroke
                android:width="1dp"
                android:color="@color/bulky_glass_indicator_border" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Gentle specular highlight (glint) -->
    <item android:top="2dp" android:left="8dp" android:right="8dp" android:bottom="28dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/glass_specular"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    
</layer-list>
