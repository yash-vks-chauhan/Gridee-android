<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Modern Style -->
    
    <!-- Shadow -->
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="90dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#18000000"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Gradient background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFFFFF"
                android:centerColor="#F8F9FA"
                android:endColor="#F0F4F8" />
        </shape>
    </item>

    <!-- Subtle shine effect -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke 
                android:width="0.5dp" 
                android:color="#1A000000" />
        </shape>
    </item>

</layer-list>
