<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/booking_card_background_pressed" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/booking_card_border_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/booking_card_background_pressed" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/booking_card_border_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/booking_card_border_default" />
        </shape>
    </item>

</selector>
