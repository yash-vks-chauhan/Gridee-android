<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Neumorphism Pressed - Inset Effect -->
    
    <!-- Inset shadow effect (inverted) -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#D1D9E6" />
        </shape>
    </item>

    <!-- Main pressed surface -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#D1D9E6"
                android:endColor="#E0E5EC" />
        </shape>
    </item>

    <!-- Inner shadow for depth -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#15000000"
                android:centerColor="#08000000"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
