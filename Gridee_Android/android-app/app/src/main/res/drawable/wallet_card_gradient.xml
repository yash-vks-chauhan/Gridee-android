<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base Gradient Layer with 4 Color Stops -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="125"
                android:startColor="#2D3436"
                android:centerColor="#242B2E"
                android:endColor="#0A0E13"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Subtle Shimmer Overlay (5% white gradient for depth) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="125"
                android:startColor="#0DFFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Noise Texture Overlay (3% white for realistic depth) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#08FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</layer-list>
