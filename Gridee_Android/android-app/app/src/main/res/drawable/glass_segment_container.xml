<?xml version="1.0" encoding="utf-8"?>
<!-- Minimal frosted segmented container -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft ambient shadow -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#14000000" />
            <corners android:radius="999dp" />
        </shape>
    </item>

    <!-- Glass surface -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bulky_glass_container_fill" />
            <stroke
                android:width="1dp"
                android:color="@color/bulky_glass_container_border" />
            <corners android:radius="999dp" />
        </shape>
    </item>

    <!-- Subtle top highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bulky_glass_highlight"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="999dp" />
        </shape>
    </item>

</layer-list>
