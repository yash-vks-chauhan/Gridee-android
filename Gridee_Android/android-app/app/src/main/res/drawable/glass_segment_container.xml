<?xml version="1.0" encoding="utf-8"?>
<!-- iOS-Style Bulky Glass Container (Track/Outer Pill) - Height 52dp, Radius 26dp -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deeper drop shadow with proper spacing -->
    <item android:top="3dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bulky_glass_shadow" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    
    <!-- Main container background with perfect centering -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Translucent white fill (10-12% opacity) -->
            <solid android:color="@color/bulky_glass_container_fill" />
            <!-- Stronger hairline border -->
            <stroke
                android:width="1.5dp"
                android:color="@color/bulky_glass_container_border" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    
    <!-- Brighter inner top highlight (glass lip effect) -->
    <item android:bottom="1dp" android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bulky_glass_highlight"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    
</layer-list>
