<?xml version="1.0" encoding="utf-8"?>
<!-- Bulky Glass Segmented Container: refined glass with soft glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle outer glow to lift from background -->
    <item android:top="-1dp" android:left="-1dp" android:right="-1dp" android:bottom="-1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="85%"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#0DFFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="27dp" />
        </shape>
    </item>

    <!-- Subtle drop shadow for minimal glass feel -->
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bulky_glass_shadow" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Main container background with perfect centering -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Translucent white fill (slightly lighter) -->
            <solid android:color="@color/bulky_glass_container_fill" />
            <!-- Hairline border -->
            <stroke
                android:width="1dp"
                android:color="@color/bulky_glass_container_border" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Soft inner top highlight (glass lip) -->
    <item android:bottom="1dp" android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bulky_glass_highlight"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:radius="25dp" />
        </shape>
    </item>

</layer-list>

