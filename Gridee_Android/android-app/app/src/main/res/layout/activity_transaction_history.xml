<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.activities.TransactionHistoryActivity">

    <!-- Toolbar (Hidden) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        android:visibility="gone"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_primary"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/background_primary"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="12dp">

            <!-- Fixed Back Button Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:alpha="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Go back"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/text_primary" />

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <!-- Main Title -->
            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="All Transactions"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.01"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- Transaction Count -->
            <TextView
                android:id="@+id/tv_transaction_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Loading..."
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- Filter Buttons -->
            <HorizontalScrollView
                android:id="@+id/filter_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingEnd="6dp"
                android:paddingStart="0dp"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideOverlay"
                android:smoothScrollbar="true">

                <LinearLayout
                    android:id="@+id/layout_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_date"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="130dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp"
                        android:text="Date"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="6dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@color/quick_add_ripple"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        app:iconPadding="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_amount"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="130dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp"
                        android:text="Amount"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="6dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@color/quick_add_ripple"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        app:iconPadding="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_payment_method"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="140dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="0dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp"
                        android:text="Payment"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="6dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@color/quick_add_ripple"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        app:iconPadding="4dp" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Transactions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_transactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_transaction" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:alpha="0.5"
            android:src="@drawable/ic_history"
            android:tint="@color/text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="No Transactions Yet"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your transaction history will appear here"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date Filter Modal Overlay -->
    <View
        android:id="@+id/modal_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/modal_overlay_color"
        android:visibility="gone"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date Filter Modal Close Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/date_modal_close_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="0.5dp"
        app:rippleColor="@color/quick_add_ripple"
        app:layout_constraintBottom_toTopOf="@id/date_filter_modal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:contentDescription="Close modal"
            app:tint="@color/text_primary" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Date Filter Modal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/date_filter_modal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="24dp">

            <!-- Modal Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/modal_handle_shape"
                android:alpha="0.3" />

            <!-- Modal Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Select Date Range"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <!-- Placeholder Content Area -->
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/background_primary"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Amount Filter Modal Close Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/amount_modal_close_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="0.5dp"
        app:rippleColor="@color/quick_add_ripple"
        app:layout_constraintBottom_toTopOf="@id/amount_filter_modal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:contentDescription="Close modal"
            app:tint="@color/text_primary" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Amount Filter Modal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/amount_filter_modal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="24dp">

            <!-- Modal Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/modal_handle_shape"
                android:alpha="0.3" />

            <!-- Modal Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Filter by Amount"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <!-- Placeholder Content Area -->
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/background_primary"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Payment Filter Modal Close Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_modal_close_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="0.5dp"
        app:rippleColor="@color/quick_add_ripple"
        app:layout_constraintBottom_toTopOf="@id/payment_filter_modal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:contentDescription="Close modal"
            app:tint="@color/text_primary" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Payment Filter Modal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_filter_modal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone"
        android:translationY="1000dp"
        android:alpha="0"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="24dp">

            <!-- Modal Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/modal_handle_shape"
                android:alpha="0.3" />

            <!-- Modal Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Payment Method"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <!-- Placeholder Content Area -->
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/background_primary"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
