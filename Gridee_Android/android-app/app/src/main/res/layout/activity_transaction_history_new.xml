<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.activities.TransactionHistoryActivity">

    <!-- Toolbar (Hidden) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        android:visibility="gone"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_primary"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/background_primary"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_container"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <!-- Fixed Back Button Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="false">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Go back"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/text_primary" />

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <!-- Main Title -->
            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="All Transactions"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.01" />

            <!-- Transaction Count -->
            <TextView
                android:id="@+id/tv_transaction_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading..."
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Filter Buttons -->
            <HorizontalScrollView
                android:id="@+id/filter_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingEnd="24dp"
                android:paddingStart="0dp"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideOverlay"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="20dp"
                android:smoothScrollbar="true">

                <LinearLayout
                    android:id="@+id/layout_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="24dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_date"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:text="Date"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="4dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@color/quick_add_outline"
                        app:strokeWidth="0.8dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="14dp"
                        app:iconPadding="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_amount"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:text="Amount"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="4dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@color/quick_add_outline"
                        app:strokeWidth="0.8dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="14dp"
                        app:iconPadding="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_type"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:text="Type"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="4dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@color/quick_add_outline"
                        app:strokeWidth="0.8dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="14dp"
                        app:iconPadding="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_filter_status"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="0dp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:translationZ="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        android:text="Status"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start|center_vertical"
                        android:alpha="1.0"
                        app:backgroundTint="@color/background_primary"
                        app:cornerRadius="4dp"
                        app:pressedTranslationZ="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeColor="@color/quick_add_outline"
                        app:strokeWidth="0.8dp"
                        app:icon="@drawable/ic_arrow_down"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="end"
                        app:iconSize="14dp"
                        app:iconPadding="2dp" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Transactions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_transactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_transaction" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:alpha="0.5"
            android:src="@drawable/ic_history"
            android:tint="@color/text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="No Transactions Yet"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your transaction history will appear here"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
