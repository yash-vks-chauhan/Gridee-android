<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="false">

    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- QR Code Icon -->
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_qr_code"
                android:background="@drawable/qr_code_background"
                android:padding="6dp"
                android:layout_marginEnd="16dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Bookings"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <!-- Filter Button -->
            <FrameLayout
                android:id="@+id/filter_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/filter_button_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_filter_lines"
                    android:contentDescription="Filter bookings" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Modern Filter Tabs with Sliding Indicator -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabs_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <!-- Tab Background Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tabs_background"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F8F9FA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Sliding Indicator -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sliding_indicator"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="21dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <!-- Tab Buttons -->
        <LinearLayout
            android:id="@+id/tabs_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tabs_background"
            app:layout_constraintStart_toStartOf="@id/tabs_background"
            app:layout_constraintEnd_toEndOf="@id/tabs_background">

            <FrameLayout
                android:id="@+id/tab_active"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_tab_active"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Active"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab_pending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_tab_pending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pending"
                    android:textColor="#8E8E93"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab_completed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_tab_completed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Completed"
                    android:textColor="#8E8E93"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

            </FrameLayout>

        </LinearLayout>

        <!-- Tab Count Badges (Optional) -->
        <TextView
            android:id="@+id/badge_active"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tab_badge_background"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tabs_background"
            app:layout_constraintStart_toStartOf="@id/tabs_background"
            app:layout_constraintEnd_toStartOf="@id/badge_pending" />

        <TextView
            android:id="@+id/badge_pending"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tab_badge_background"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tabs_background"
            app:layout_constraintStart_toEndOf="@id/badge_active"
            app:layout_constraintEnd_toStartOf="@id/badge_completed" />

        <TextView
            android:id="@+id/badge_completed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tab_badge_background"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tabs_background"
            app:layout_constraintStart_toEndOf="@id/badge_pending"
            app:layout_constraintEnd_toEndOf="@id/tabs_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabs_container">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bookings RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_booking_modern" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_empty_state"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_bookings"
                android:tint="#E0E0E0" />

            <TextView
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="No Active Bookings"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_empty_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="32dp"
                android:text="Your active parking bookings will appear here"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <!-- Book Parking Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_book_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Find Parking"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"
                app:cornerRadius="24dp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                app:icon="@drawable/ic_search"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_book_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#1976D2"
        android:src="@drawable/ic_add"
        android:contentDescription="Book Parking"
        app:tint="#FFFFFF"
        app:elevation="16dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
