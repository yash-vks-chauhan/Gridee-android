<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="16dp"
        android:text="My Bookings"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Status Tabs -->
    <LinearLayout
        android:id="@+id/layout_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header">

        <TextView
            android:id="@+id/tab_active"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple_effect"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Active"
            android:textColor="@color/primary_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_pending"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple_effect"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Pending"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_completed"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/tab_ripple_effect"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Completed"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Tab Indicator -->
    <View
        android:id="@+id/tab_indicator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="@id/tab_active"
        app:layout_constraintStart_toStartOf="@id/tab_active"
        app:layout_constraintTop_toBottomOf="@id/layout_tabs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bookings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_indicator" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rv_bookings"
        app:layout_constraintEnd_toEndOf="@id/rv_bookings"
        app:layout_constraintStart_toStartOf="@id/rv_bookings"
        app:layout_constraintTop_toTopOf="@id/rv_bookings">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.3"
            android:src="@drawable/ic_bookings"
            android:tint="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="No Active Bookings"
            android:textColor="@color/text_primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your active parking bookings will appear here"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
