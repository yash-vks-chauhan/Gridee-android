<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_vehicle_item"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Vehicle Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_vehicle_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MH01AB1234"
                android:textColor="#212121"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/iv_default_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:tint="#FFC107"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                android:contentDescription="Default vehicle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_vehicle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle 1"
            android:textColor="#757575"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Three Dot Menu -->
    <ImageView
        android:id="@+id/iv_vehicle_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        android:tint="#9E9E9E"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:contentDescription="Vehicle options" />

</LinearLayout>
