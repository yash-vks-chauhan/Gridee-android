<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_handle" />

        <TextView
            android:id="@+id/tv_sheet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_scan_success_title"
            android:textSize="18sp"
            android:textColor="@color/scanner_text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_sheet_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MH12AB1234"
            android:textSize="22sp"
            android:textColor="@color/scanner_text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:letterSpacing="0.08" />

        <TextView
            android:id="@+id/tv_sheet_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_sheet_status_fetching"
            android:textColor="@color/scanner_text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/sheet_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/scanner_status_scanning_tint"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sheet_scan_again"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/vehicle_sheet_scan_again" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_manual_entry"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="@string/vehicle_sheet_manual_button"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/manual_entry_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_manual_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_sheet_manual_label"
                android:textColor="@color/scanner_text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/manual_input_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_manual_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/vehicle_sheet_manual_hint"
                    android:inputType="textCapCharacters" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manual_submit"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/vehicle_sheet_manual_submit" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
