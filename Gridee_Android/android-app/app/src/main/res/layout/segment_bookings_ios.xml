<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/segmentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:padding="@dimen/segmented_control_padding"
    app:cardCornerRadius="32dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/segment_shell_surface"
    app:strokeWidth="1.5dp"
    app:strokeColor="@color/segment_shell_border">

    <FrameLayout
        android:id="@+id/segmentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/segmentSlider"
            android:layout_width="0dp"
            android:layout_height="@dimen/segmented_control_height"
            android:layout_gravity="center_vertical|start"
            android:alpha="1"
            android:visibility="invisible"
            android:elevation="0dp"
            android:translationZ="0dp"
            android:stateListAnimator="@null"
            android:background="@drawable/segment_slider_background" />

        <LinearLayout
            android:id="@+id/segmentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/segmentActive"
                android:layout_width="0dp"
                android:layout_height="@dimen/segmented_control_height"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@android:color/transparent"
                android:stateListAnimator="@animator/segment_state_list_animator"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/segmented_control_item_padding">

            <TextView
                android:id="@+id/textActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="Active"
                android:textAllCaps="false"
                android:textColor="@color/segment_button_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/badgeActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/segment_badge_background"
                android:text="0"
                android:textColor="@color/segment_badge_text"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/segmentPending"
                android:layout_width="0dp"
                android:layout_height="@dimen/segmented_control_height"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@android:color/transparent"
                android:stateListAnimator="@animator/segment_state_list_animator"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/segmented_control_item_padding">

            <TextView
                android:id="@+id/textPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="Pending"
                android:textAllCaps="false"
                android:textColor="@color/segment_button_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/badgePending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/segment_badge_background"
                android:text="0"
                android:textColor="@color/segment_badge_text"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/segmentCompleted"
                android:layout_width="0dp"
                android:layout_height="@dimen/segmented_control_height"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@android:color/transparent"
                android:stateListAnimator="@animator/segment_state_list_animator"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/segmented_control_item_padding">

            <TextView
                android:id="@+id/textCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="Completed"
                android:textAllCaps="false"
                android:textColor="@color/segment_button_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/badgeCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/segment_badge_background"
                android:text="0"
                android:textColor="@color/segment_badge_text"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
