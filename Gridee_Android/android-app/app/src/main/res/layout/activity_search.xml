<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false">

    <View
        android:id="@+id/search_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/search_scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/ripple_search_bar"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        android:elevation="8dp"
        android:translationZ="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/searchInputContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_search_bar_focused"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_light_gray_background"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/search_icon_tint_selector"
                android:contentDescription="@string/content_description_close_search"
                android:clickable="true"
                android:focusable="true" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/search_expanded_hint"
                android:imeOptions="actionSearch"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/search_input_text"
                android:textColorHint="@color/search_hint_text"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:src="@drawable/ic_close"
                android:tint="@color/search_icon_tint_selector"
                android:contentDescription="@string/content_description_clear_query"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/searchContentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/searchContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0"
            android:translationY="24dp">

            <TextView
                android:id="@+id/tvRecentHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_recent_header"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/recentChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:chipSpacing="12dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Downtown Plaza"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:chipBackgroundColor="@color/booking_sheet_chip_bg"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/search_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Airport T2 Garage"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:chipBackgroundColor="@color/booking_sheet_chip_bg"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/search_ripple_color" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Westend Mall"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:chipBackgroundColor="@color/booking_sheet_chip_bg"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/search_ripple_color" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tvPopularHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/search_popular_header"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/popularList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Indiranagar High Street"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Tech Park Central"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="City Metro Hub"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/search_empty_state"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
