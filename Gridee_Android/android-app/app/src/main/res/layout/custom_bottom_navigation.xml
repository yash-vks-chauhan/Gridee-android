<?xml version="1.0" encoding="utf-8"?>
<!-- Root container that extends to screen bottom -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_navigation_container"
    android:background="@drawable/nav_background_edge_to_edge"
    android:elevation="12dp"
    android:fitsSystemWindows="false"
    android:paddingBottom="0dp"
    android:minHeight="80dp">

    <!-- Navigation content container -->
    <LinearLayout
        android:id="@+id/nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_marginBottom="0dp">

        <!-- Home Tab -->
        <FrameLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="2dp"
            android:background="@drawable/tab_ripple_effect">

            <!-- Remove active state background -->
            <View
                android:id="@+id/home_active_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/active_tab_background"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/charcoal_black"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Home"
                    android:textColor="@color/charcoal_black"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:gravity="center" />

            </LinearLayout>

        </FrameLayout>

        <!-- Bookings Tab -->
        <FrameLayout
            android:id="@+id/tab_bookings"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="2dp"
            android:background="@drawable/tab_ripple_effect">

            <!-- Inactive state background -->
            <View
                android:id="@+id/bookings_active_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/active_tab_background"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iv_bookings"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bookings"
                    android:tint="@color/charcoal_black"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:id="@+id/tv_bookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Bookings"
                    android:textColor="@color/charcoal_black"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:gravity="center" />

                </LinearLayout>

        </FrameLayout>

        <!-- Wallet Tab -->
        <FrameLayout
            android:id="@+id/tab_wallet"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="2dp"
            android:background="@drawable/tab_ripple_effect">

            <!-- Inactive state background -->
            <View
                android:id="@+id/wallet_active_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/active_tab_background"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_wallet"
                    android:tint="@color/charcoal_black"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Wallet"
                    android:textColor="@color/charcoal_black"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:gravity="center" />

            </LinearLayout>

        </FrameLayout>

        <!-- Profile Tab -->
        <FrameLayout
            android:id="@+id/tab_profile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="2dp"
            android:background="@drawable/tab_ripple_effect">

            <!-- Inactive state background -->
            <View
                android:id="@+id/profile_active_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/active_tab_background"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_account"
                    android:tint="@color/charcoal_black"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Profile"
                    android:textColor="@color/charcoal_black"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:gravity="center" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>                                                                                                                                                                 