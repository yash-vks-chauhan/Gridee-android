<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_white_surface"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:id="@+id/sheet_handle"
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_handle"
        android:contentDescription="@null"
        android:alpha="0.6" />

    <!-- Simplified Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_filter_sliders"
            android:tint="@color/text_primary"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Filters &amp; Sort"
            android:textColor="@color/text_primary"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Sort Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#F8F9FA"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORT BY"
                android:textColor="#757575"
                android:textSize="11sp"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioNewestFirst"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:text="@string/sort_option_newest"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    app:buttonTint="@color/radio_button_black"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioOldestFirst"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:text="@string/sort_option_oldest"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    app:buttonTint="@color/radio_button_black"
                    app:useMaterialThemeColors="false" />
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Divider -->
    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E8E8E8" />

    <!-- Date Range Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section Header with Inline Clear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textDateHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DATE RANGE"
                android:textColor="#757575"
                android:textSize="11sp"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClearDateFilter"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="60dp"
                android:minHeight="0dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="0dp"
                android:text="Clear"
                android:textAllCaps="false"
                android:textColor="#757575"
                android:textSize="11sp"
                android:visibility="gone"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconTint="#757575"
                app:iconSize="12dp"
                app:iconPadding="2dp"
                app:iconGravity="start" />
        </LinearLayout>

        <!-- Date Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:rippleColor="#10000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_date_from"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textColor="#9E9E9E"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Select Date"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:rippleColor="#10000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_date_to"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textColor="#9E9E9E"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Select Date"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E8E8E8" />

    <!-- Spot Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSpotHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARKING SPOT"
            android:textColor="#757575"
            android:textSize="11sp"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textNoSpots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spot_filter_no_data"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:visibility="gone" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSpots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="6dp"
                app:chipSpacingVertical="6dp" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonResetAll"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.4"
            android:text="Reset All"
            android:textAllCaps="false"
            android:textColor="#757575"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            app:cornerRadius="24dp"
            app:rippleColor="#10000000" />

        <View
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonApplyFilters"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.6"
            android:text="Apply Filters"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/inter_medium"
            android:backgroundTint="@color/text_primary"
            android:stateListAnimator="@null"
            app:cornerRadius="24dp"
            app:elevation="0dp"
            app:rippleColor="#40FFFFFF" />
    </LinearLayout>

</LinearLayout>
