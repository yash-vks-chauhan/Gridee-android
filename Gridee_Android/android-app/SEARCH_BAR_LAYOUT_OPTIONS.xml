<?xml version="1.0" encoding="utf-8"?>
<!-- 
    IMPROVED SEARCH BAR LAYOUTS - Choose your style!
    
    To use a different style, replace the background drawable:
    
    iOS 17 Style:        android:background="@drawable/bg_search_bar_selector_ios17"
    Glassmorphism:       android:background="@drawable/bg_search_bar_selector_glass"
    Gradient Modern:     android:background="@drawable/bg_search_bar_selector_gradient"
    Current (Default):   android:background="@drawable/bg_search_bar_selector"
-->

<!-- OPTION 1: iOS 17 ULTRA-PREMIUM STYLE -->
<FrameLayout
    android:id="@+id/search_container_ios17"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_welcome">

    <LinearLayout
        android:id="@+id/card_search_ios17"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:background="@drawable/bg_search_bar_selector_ios17"
        android:foreground="@drawable/ripple_search_bar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="2dp"
        android:translationZ="1dp"
        android:outlineProvider="bounds">

        <ImageView
            android:id="@+id/iv_search_icon_ios17"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search_enhanced"
            android:tint="@color/search_icon_tint_selector"
            android:contentDescription="Search icon"
            android:alpha="0.7" />

        <TextView
            android:id="@+id/tv_search_placeholder_ios17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:text="Search for parking spots"
            android:textColor="@color/search_hint_text"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.01"
            android:gravity="center_vertical"
            android:alpha="0.75"
            android:includeFontPadding="false" />

    </LinearLayout>

</FrameLayout>


<!-- OPTION 2: GLASSMORPHISM PREMIUM STYLE -->
<FrameLayout
    android:id="@+id/search_container_glass"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_welcome">

    <LinearLayout
        android:id="@+id/card_search_glass"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/bg_search_bar_selector_glass"
        android:foreground="@drawable/ripple_search_bar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="3dp"
        android:translationZ="2dp"
        android:outlineProvider="bounds">

        <!-- Search Icon with subtle animation ready -->
        <ImageView
            android:id="@+id/iv_search_icon_glass"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_search_enhanced"
            android:tint="@color/search_icon_tint_selector"
            android:contentDescription="Search icon"
            android:alpha="0.8" />

        <TextView
            android:id="@+id/tv_search_placeholder_glass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:text="Where do you want to park?"
            android:textColor="@color/search_hint_text"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0"
            android:gravity="center_vertical"
            android:alpha="0.8"
            android:includeFontPadding="false" />

        <!-- Optional: Voice search icon -->
        <ImageView
            android:id="@+id/iv_voice_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mic"
            android:tint="@color/search_icon_tint"
            android:contentDescription="Voice search"
            android:alpha="0.6"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>


<!-- OPTION 3: GRADIENT MODERN STYLE -->
<FrameLayout
    android:id="@+id/search_container_gradient"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_welcome">

    <LinearLayout
        android:id="@+id/card_search_gradient"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:background="@drawable/bg_search_bar_selector_gradient"
        android:foreground="@drawable/ripple_search_bar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:outlineProvider="bounds">

        <ImageView
            android:id="@+id/iv_search_icon_gradient"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_enhanced"
            android:tint="@color/search_icon_tint_selector"
            android:contentDescription="Search icon"
            android:alpha="0.85" />

        <TextView
            android:id="@+id/tv_search_placeholder_gradient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:text="Search locations, parking lots..."
            android:textColor="@color/search_hint_text"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.005"
            android:gravity="center_vertical"
            android:alpha="0.85"
            android:includeFontPadding="false" />

    </LinearLayout>

</FrameLayout>
